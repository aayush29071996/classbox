<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/themePrimary</item>
        <item name="colorPrimaryDark">@color/themePrimaryDark</item>
        <item name="colorAccent">@color/themeAccent</item>
    </style>

    <style name="CustomToolBarTheme" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/themePrimaryText</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">30dp</item>
    </style>

</resources>
